<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
  <id>src</id>
  <formats>
    <format>zip</format>
  </formats>
  <!-- so the archive does not prefix the files with ${artifactId}-${revision}/ -->
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <!-- only apex and db directories -->
    <fileSet>
      <directory>${project.basedir}/apex</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>*pom.xml</exclude>
        <exclude>target</exclude>
        <exclude>target/antrun</exclude>
        <exclude>target/**/*.*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/db</directory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>*pom.xml</exclude>
        <exclude>target</exclude>
        <exclude>target/antrun</exclude>
        <exclude>target/**/*.*</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
